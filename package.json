{
  "name": "apollo-backend",
  "version": "1.0.0",
  "description": "backend for apollo project",
  "main": "index.js",
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run lint && npm run build-ts && npm run server",
    "server": "node dist/",
    "watch-node": "nodemon dist/app.js",
    "watch-ts": "tsc -w",
    "test": "nyc mocha -r ts-node/register test/**/*.spec.ts",
    "lint": "tslint ./src/**/*.ts",
    "lintFix": "node node_modules/.bin/tslint --fix ./src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M-Balghonaim/apollo-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/M-Balghonaim/apollo-backend/issues"
  },
  "homepage": "https://github.com/M-Balghonaim/apollo-backend#readme",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "branches": 0,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/graphql": "^14.0.7",
    "@types/leven": "^2.1.1",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^9.3.1",
    "@types/node": "^11.10.5",
    "@types/request-promise-native": "^1.0.15",
    "apollo-errors": "^1.9.0",
    "apollo-server-express": "^2.14.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "connect-redis": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.4",
    "ioredis": "^4.6.2",
    "istanbul": "^0.4.5",
    "leven": "^2.1.0",
    "morgan": "^1.9.1",
    "pg": "^7.8.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "tslint": "^5.13.1",
    "typeorm": "^0.2.14",
    "typescript": "^3.3.3333",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/connect-redis": "0.0.9",
    "@types/dotenv": "^6.1.1",
    "@types/ioredis": "^4.0.9",
    "@types/mocha": "^5.2.6",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.12",
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.3",
    "tslint-eslint-rules": "^5.4.0"
  }
}
